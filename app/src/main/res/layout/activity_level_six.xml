<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativelvl6main"
    tools:context="com.blogspot.techtibet.mathq.LevelSixActivity">

    <Button
        android:id="@+id/gobtnlvl6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="111dp"
        android:backgroundTint="#ff0eff31"
        android:onClick="startgame"
        android:text="Go!"
        android:textSize="80sp"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/relativelvl6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <TextView
            android:id="@+id/timerlvl6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="30s"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/explvl6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/timerlvl6"
            android:layout_centerHorizontal="true"
            android:text="0-0=0"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/marklvl6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/explvl6"
            android:layout_alignParentEnd="true"
            android:text="0/0"
            android:textSize="30sp" />

        <GridLayout
            android:id="@+id/gridLayoutlvl6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/timerlvl6"
            android:layout_marginTop="20dp">


            <Button
                android:id="@+id/button0lvl6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:background="@color/colorPrimaryDark"
                android:onClick="choosenoption"
                android:tag="0"
                android:text="0"
                android:textSize="80sp" />

            <Button
                android:id="@+id/button1lvl6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:background="@color/colorAccent"
                android:onClick="choosenoption"
                android:tag="1"
                android:text="1"
                android:textSize="80sp" />

            <Button
                android:id="@+id/button2lvl6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:background="@color/colorGreen"
                android:onClick="choosenoption"
                android:tag="2"
                android:text="2"
                android:textSize="80sp" />

            <Button
                android:id="@+id/button3lvl6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:background="@color/colorPrimary"
                android:onClick="choosenoption"
                android:tag="3"
                android:text="3"
                android:textSize="80sp" />
        </GridLayout>

        <TextView
            android:id="@+id/messagetextlvl6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gridLayoutlvl6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:textSize="40sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/messageimglvl6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/messagetextlvl6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp"
            android:src="@drawable/correct"

            android:visibility="invisible" />

    </RelativeLayout>

</RelativeLayout>
